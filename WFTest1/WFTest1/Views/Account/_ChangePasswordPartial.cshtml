@model WFTest1.Models.LocalPasswordModel



@using (Html.BeginForm("Manage", "Account")) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    
     <div class="col-lg-8">
                                    <form role="form">
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.OldPassword)
                                            @Html.PasswordFor(m => m.OldPassword, new {@class="form-control",@type="password"})
                                        </div>
                                        <div class="form-group">
                                           @Html.LabelFor(m => m.NewPassword)
                                           @Html.PasswordFor(m => m.NewPassword,new {@class="form-control",@type="password"})
                                        </div>
                                        <div class="form-group">
                                         @Html.LabelFor(m => m.ConfirmPassword)
                                            @Html.PasswordFor(m => m.ConfirmPassword,new {@class="form-control",@type="password"})
                                        </div>
                                        
                                        <input type="submit" class="btn btn-primary" value="Change password" />
                                      
                                    </form>
                                </div>
                                <!-- /.col-lg-6 (nested) -->

}
