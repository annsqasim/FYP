@model WFTest1.Models.LoginModel

@{
    ViewBag.Title = "Log in";
}

@*<body  onload="noBack();">*@



   <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Please Sign In</h3>
                    </div>
                    <div class="panel-body">

<section id="loginForm">

@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl0 }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
                <div class="form-group">              
                    @Html.TextBoxFor(model => model.UserName, new {@class="form-control",@type="text", @placeholder="UserName."})
                    @Html.ValidationMessageFor(m => m.UserName)
                </div>
               
            
                <div class="form-group">                
                    @Html.PasswordFor(model => model.Password,new {@class="form-control",@type="password",  @placeholder="Password"})
                    @Html.ValidationMessageFor(m => m.Password)           
                </div>

                @*<div class="form-group">
                    @Html.CheckBoxFor(m => m.RememberMe, new {@name="remember", @type="checkbox", @value="Remember Me" })  Remember Me
                </div>   *@     
        <input type="submit" class="btn btn-lg btn-success btn-block" value="Log in" />
    </fieldset>
    
}
</section>

        </div>
        </div>
        </div>
        </div>
        </div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
</body>