@model WFTest1.Models.LoginModel

@{
    ViewBag.Title = "Log in";
}
<style>
   ul
{
list-style-type: none;
color:red;
}
    p {
        color:red;
    }

</style>

     
    



 <div class="container">
     <hgroup class="title">
   
     </hgroup>

        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Please Sign In</h3>
                    </div>
                    <div class="panel-body">
                        <section id="loginForm">
                        @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl })) {
                      
                         <div class="form-group" style="margin-left:-40px;">   
                        @Html.AntiForgeryToken() 
                       @Html.ValidationSummary(true)
                           </div>

                        <form role="form">

                            <fieldset>
                                <div class="form-group">
                                               @Html.TextBoxFor(m => m.UserName,new {@class="form-control" ,@placeholder="User Name"})
                                             <p>  @Html.ValidationMessageFor(m => m.UserName)</p>

                                </div>
                                <div class="form-group">
                                               @Html.PasswordFor(m => m.Password, new {@type="password",@class="form-control", @placeholder="Password" })
                                             <p>  @Html.ValidationMessageFor(m => m.Password)</p>

                                </div>
                                <div class="checkbox">
                                    <label>
                                               @Html.CheckBoxFor(m => m.RememberMe)
                                               @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox" })
                                    </label>
                                </div>
                                <!-- Change this to a button or input when using this as a form -->
                                
                                <input type="submit" class="btn btn-lg btn-success btn-block" value="Log in" class="btn btn-primary"/>
                                        <b> @Html.ActionLink("Register", "Register") </b> if you don't have an account.
                            </fieldset>
                        </form>
                        }
                            </section>
                    </div>
                </div>
            </div>
        </div>
    </div>  

