@model WFTest1.Models.webpages_Roles
@{
    ViewBag.Title = "Role Information";
}
<style>

    button {
    width:140px;
    }

</style>
 @Html.Partial("Menu") 

       
@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    
    <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">User Registration Form</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-8">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Basic Elements
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-8">
                                    <form role="form">
                                        <div class="form-group">
                                             <label>UserName</label>
                                             @Html.TextBoxFor(m =>m.RoleName, new { @class="form-control", @placeholder="Enter RoleName"})                                           
                                        </div>
                                        
                                                                     
                                        <button type="submit" class="btn btn-primary">Submit</button>
                                      
                                    </form>
                                </div>
                                <!-- /.col-lg-6 (nested) -->
                               
                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>

    
}
    </div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}