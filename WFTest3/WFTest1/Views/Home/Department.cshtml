@model WFTest1.Models.Department
@{
    ViewBag.Title = "AddDepart";
}
@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)}
@*<input type="submit" value="Add Dept"*@
 @Html.Partial("Menu") 

<div>
<!-- Button trigger modal -->
<button class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal" id="ab">
 Add Department
</button>
    
<!-- Modal -->


<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Add Department Here</h4>
      </div>
      <div class="modal-body">
       


          <form role="form" id="add">
  <div class="form-group">
   @Html.LabelFor(model => model.Dept_Name)
     @Html.EditorFor(model => model.Dept_Name)
            @Html.ValidationMessageFor(model => model.Dept_Name)
     
  </div>
  
              </div>
      <div class="modal-footer">
           <input type="submit" class="btn btn-primary" value="Save changes"/>
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        
      </div>
</form>  
        
        
        
        
        
           
    </div>
  </div>
</div>




    </div>


<br />
<button class="btn btn-primary btn-lg" data-toggle="modal" data-target="#delModal">
 Delete Department
</button>

<!-- Modal -->
<div class="modal fade" id="delModal" tabindex="-1" role="dialog" aria-labelledby="delModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="delModalLabel">Delete Department Here</h4>
      </div>
      <div class="modal-body">
       


          <form role="form">
  <div class="form-group">
    @Html.LabelFor(model => model.Dept_Name)
     @Html.EditorFor(model => model.Dept_Name)
            @Html.ValidationMessageFor(model => model.Dept_Name)
  </div>
  
              </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
</form>
    </div>
  </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
 @Html.Partial("Footer") 